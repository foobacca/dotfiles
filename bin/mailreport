#!/bin/bash

NOTMUCH=$HOME/bin/notmuchwork

function tag_report(){
  TAG=$1
  TOTAL_COUNT=$($NOTMUCH count tag:$TAG)
  FLAGGED_COUNT=$($NOTMUCH count tag:$TAG AND tag:flagged)
  UNREAD_COUNT=$($NOTMUCH count tag:$TAG AND tag:unread)

  echo "$TAG: total $TOTAL_COUNT flagged $FLAGGED_COUNT unread $UNREAD_COUNT"
}

function full_report(){
  tag_report inbox
  tag_report action
  tag_report waiting
  tag_report readlater
}

full_report | column -t
