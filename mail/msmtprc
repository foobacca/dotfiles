# global options
defaults
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/log/msmtp.log


account aptivate
host mail.aptivate.org
from hamish@aptivate.org
auth on
user hamish
passwordeval gpg --use-agent --quiet --batch -d ~/.passwd/aptivate.gpg


account gmail
host smtp.gmail.com
port 587
protocol smtp
auth on
from dmishd@gmail.com
user dmishd@gmail.com
passwordeval gpg --use-agent --quiet --batch -d ~/.passwd/gmail.gpg


account default : aptivate
