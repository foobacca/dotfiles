# Expand the history size
HISTFILESIZE=500000
HISTSIZE=50000

# python encoding
export PYTHONIOENCODING=utf-8

# default editor
export EDITOR=nvim

# make bc work nicely - use math library
export BC_ENV_ARGS=-l

# CVS exports
export CVS_RSH=ssh
export CVSROOT=":ext:hamish@cvs.aptivate.org:/home/cvs/root/"

# for vmail
export VMAIL_HTML_PART_READER='elinks -dump'
export VMAIL_BROWSER='xdg-open'

# wrap by default
export MOST_SWITCHES="-w"

# have colour output from Django
export DJANGO_COLORS="dark"

# build go stuff
export GO_PATH="$HOME/.local/share/go/"

# pypyp config file
export PYP_CONFIG_PATH="$HOME/.config/pypyp.py"

export PYENV_ROOT="$HOME/.pyenv"

# ansible: don't do cowsay!
export ANSIBLE_NOCOWS=1

export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python3

