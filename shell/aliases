# root mysql
alias mysqlroot='mysql -u root -p$(sudo cat /root/mysql_root_password)'

# renice dropbox
alias renicedropbox="ps -ef | grep dropbox | grep -v grep | awk '{print \$2}' | xargs renice 10 -p"

