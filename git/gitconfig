# Set your name and email with the following:
# git config -f ~/.gitconfig.local user.name John Appleseed
# git config -f ~/.gitconfig.local user.email me@example.com

[user]
    name = Hamish Downer

[github]
    user = foobacca

[include]
    path = .gitconfig.local

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    excludesfile = ~/.gitignore
    pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    attributesfile = ~/.gitattributes
    autocrlf = input

[commit]
    template = ~/.gitmessage

[push]
    default = tracking

[fetch]
    # clean local copies of branches that have been deleted on the remote
    prune = true

[diff "zip"]
    textconv = unzip -c -a

[diff "po"]
    textconv = msgcat --no-location --no-wrap --sort-output

[diff "odf"]
    binary = true
    textconv = odt2txt

[merge]
    log = true
    conflictstyle = diff3
    tool = vimdiff
    # tool = meld

[mergetool]
    prompt = false

[mergetool "threesome"]
    cmd = "gvim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
    trustExitCode = true

[rebase]
autosquash = true

[url "git@github.com:"]
insteadOf = "gh:"
pushInsteadOf = "github:"
pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
insteadOf = "github:"

[url "git@gist.github.com:"]
insteadOf = "gst:"
pushInsteadOf = "gist:"
pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
insteadOf = "gist:"

[url "git@heroku.com:"]
insteadOf = "heroku:"

[rerere]
enabled = 1

[alias]
    st = status
    ci = commit
    co = checkout
    w = whatchanged
    wtf = !git-wtf
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset' --abbrev-commit
    all = !git-all
    amend = !git-amend
    credit = !git-credit
    delete-local-merged = !git-delete-local-merged
    promote = !git-promote
    rank-contributors = !git-rank-contributors
    undo = !git-undo
    up = !git-up

[gitflow "branch"]
master = master
develop = develop

[gitflow "prefix"]
feature = feature/
release = release/
hotfix = hotfix/
support = support/
versiontag =

[git-up "rebase"]
arguments = --preserve-merges

[git-up "bundler"]
check = false

