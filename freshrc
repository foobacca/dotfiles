# freshshell.com
#
# Examples:
#
#   fresh twe4ked/dotfiles shell/functions.sh
#   fresh jasoncodes/dotfiles aliases/rails.sh
#   fresh jasoncodes/dotfiles config/tmux.conf --file
#
# See http://freshshell.com/readme for documentation.

fresh freshshell/fresh bin/fresh --bin

# general config
fresh ackrc --file
fresh inputrc --file

fresh jasoncodes/dotfiles config/inputrc --file
fresh tigrc --file
fresh jasoncodes/dotfiles config/sqliterc --file

# notmuch related bits
fresh afew/config --file=~/.config/afew/config

fresh alot/config.work --file=~/.config/alotwork/config
fresh alot/config.common --file=~/.config/alotwork/config
fresh alot/config.gmail --file=~/.config/alot/config
fresh alot/config.common --file=~/.config/alot/config
fresh kazuoteramoto/dotfiles .config/alot/themes/solarized_dark --file=~/.config/alot/themes/solarized_dark
fresh kazuoteramoto/dotfiles .config/alot/themes/solarized_dark --file=~/.config/alotwork/themes/solarized_dark

# git
fresh git/gitconfig --file
fresh git/gitconfig.local.home --file=~/.gitconfig.local

# bash
fresh bashrc --file
fresh 'bash/*'
fresh jasoncodes/dotfiles shell/aliases/editor.sh --file=~/.bashrc

# vim
fresh gvimrc --file
# note vimrc sources files from .dotfiles/vim in particular order
fresh vimrc.vundle --file=~/.vimrc

# tmux
fresh 'tmux/*' --file=~/.tmux.conf

#mail stuff
fresh mail/mailcap --file=~/.mailcap
fresh mail/offlineimaprc --file=~/.offlineimaprc

# bin commands
fresh 'bin/*' --bin
fresh 'gitbin/*' --bin
fresh clvv/fasd fasd --bin
fresh zx2c4/gmail-notmuch gmail-notmuch.py --bin

# powerline
fresh powerline --file=~/.config/powerline/

# redshift
fresh redshift.conf --file=~/.config/redshift.conf

# terminator solarized sample config
fresh ghuntley/terminator-solarized config --file=~/.config/terminator/config-solarized

# dircolors - solarized
fresh seebi/dircolors-solarized dircolors.ansi-universal --file=~/.dircolors

# xchat - solarized
fresh solarized/xchat-colors-solarized solarized-dark-colors.conf --file=~/.xchat2/colors.conf

# sack stuff - https://github.com/sampson-chen/sack
fresh sampson-chen/sack sack --bin
fresh sampson-chen/sack sag --bin
fresh sampson-chen/sack sgrep --bin
fresh sampson-chen/sack .sackrc

fresh freshshell/fresh contrib/completion/fresh-completion.bash
